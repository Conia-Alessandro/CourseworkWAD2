    <div class="card border-0 mx-auto">
        <div class="card-body border-0">
            <h2 class="text-info">{{user_name}} , which goal would you like to modify of this <b class="text-primary">{{day_name}}</b> ?</h2>
            <hr class="mx-auto" style="height:2px; width:100%; border-width:0; color:red; background-color:#6611EE">
            {{#type_steps}}
            <h3 class="text_info"> you're currently viewing Goals of the category of <b class="text-success">Fitness</b></h3>
            <a class="btn btn-info" href="/goals/{{todays_date}}/sleep">go to wellbeing</a>
            <a class="btn btn-info" href="/goals/{{todays_date}}/health">go to healthy lifestyle</a>
            {{/type_steps}}
        </div>
    </div>
    <!-- content -->
    <!-- goals -->
    {{#type_sleep}}
    <div class="row mx-auto justify-content-center">
        <div class="col-sm-3">
            <div class="card text-center eepy">
                <div class="card-body">
                    <h5 class="card-title">Sleep</h5>
                    <!-- image of Sleep -->
                    <div class="bg-image mx-auto">
                        <img src="icons/sleeping_goal.png" class="w-100" />
                    </div>
                    <br>
                    <!--  if there's a goal -->
                    {{#sleeping_goals}}
                    
                    {{/sleeping_goals}}
                    <!-- description if there's any goals -->
                    {{^sleeping_goals}}
                    <div class="card goals-content">
                    <p class="card-text text-secondary">You currently don't have any goals set for this category</p>
                    </div>
                    {{/sleeping_goals}}
                    <br>
                    <a href="#" class="btn btn-primary">create goal</a>
                </div>
            </div>
        </div>
     {{/type_sleep}}
     {{#type_health}}
        <div class="col-sm-3">
            <div class="card text-center wgt">
                <div class="card-body">
                    <h5 class="card-title">Weight loss</h5>
                    <!-- image of weight loss -->
                    <div class="bg-image mx-auto">
                        <img src="icons/eating_goal.png" class="w-100" />
                    </div>
                    <br>
                    {{#health_goals}}

                    {{/health_goals}}
                    <!-- description if there's no goals -->
                    {{^health_goals}}
                    <div class="card goals-content">
                    <p class="card-text text-secondary">You currently don't have any goals set for this category</p>
                    </div>
                    {{/health_goals}}
                    <br>
                    <a href="#" class="btn btn-primary">create goal</a>
                </div>
            </div>
        </div>
        {{/type_health}}
        {{#type_steps}}
        <div class="col-sm-3 mx-auto">
            <div class="card text-center step">
                <div class="card-body">
                    <h5 class="card-title">Steps</h5>
                    <!-- image of Steps -->
                    <div class="bg-image mx-auto">
                        <img src="../../../icons/steps_goal.png" class="w-50" />
                    </div>
                    <br>
                    {{#steps_goals}}
                    <form action="/updateGoal" method="post" name="form_update" class="justify-content-center"> <!-- updates current value -->
                    <h3 class="text-light">Your set goal: <b class="text-danger">{{endValue}}</b> steps</h3>
                    <div class="form-group">
                    <label for="subcategorytext" class="text-dark">category</label>
                    <input type="text" name="subcategorytext"class="card-text text-dark sub_category_text text-center"value="{{subCategory}}"disabled><br>
                    </div>
                    <div class="form-group">
                    <label for="currentSteps" class="text-dark">Current Steps</label>
                    <input type="number" class="text-center" id="current_steps_number" name="currentSteps" min="{{currentValue}}" max="{{endValue}}" value="{{currentValue}}">
                    </div>
                    <div class="form-group">
                    <input type="submit" value="update" class="btn btn-info">
                    </div>
                    </form>
                    {{/steps_goals}}
                    <!-- description if there's no goals -->
                    {{^steps_goals}}
                    <div class="card goals-content">
                    <p class="card-text text-secondary">You currently don't have any goals set for this category</p>
                    </div>
                    {{/steps_goals}}
                    <br>
                </div>
            </div>
        </div>
        {{/type_steps}}
      </div>
  </div>
   <script>
   let editableSubclasses = document.getElementsByClassName("sub_category_text")[0];
   editableSubclasses.setAttribute("size",editableSubclasses.value.length);
