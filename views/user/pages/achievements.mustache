    {{/any_achivements}}
    <!-- content -->
    <div class="row mx-auto justify-content-center">
        <div class="col-sm-5">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Your Achievements</h5>
                <!-- achivements list -->
                <ul class="list-group list-group-flush">
                 <!-- add star after achivement ::after -->
                {{#achievements}}
                <li class="list-group-item text-dark">Achievement got on <b class="text-info">{{completedOn}}</b>, of category: <b class="text-success goal_type_retrived">{{type}}</b>(<b class="text-warning">{{subcategory}}</b>):<br><i>{{description}}</i><br> Objective completed with <b class="text-info">{{currentValue}}</b> out of the set end value, which was <b class="text-primary">{{endValue}}</b>. Goal completed within the end date: <b class="text-primary">{{endDate}}</b></li>
                {{/achievements}}
                </ul>
                <!-- no goals == image and create a goal button -->
                {{^achievements}}
                <div class="row mx-auto justify-content-center"> <!--justified -->
                    <div class="bg-image">
                        <img src="images/achivement_maker.jpg" class="w-100" />
                        <div class="mask">
                            <div class="text">
                            <p>It's never too late to get an achivement {{user_name}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <br> <a href="/goals" class="btn btn-primary">Set a goal!</a>
                
                {{/achievements}}                 
                </div>
            </div>
        </div>
