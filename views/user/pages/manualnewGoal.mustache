    <body>   
    <div class="card border-0 mx-auto">
        <div class="card-body border-0">
            <h2 class="text-info">{{user_name}} , what Goal have you got in plan?</h2>
            <h4 class="text-secondary">Pick between the options below.</h4>
            <hr class="mx-auto" style="height:2px; width:100%; border-width:0; color:red; background-color:#6611EE">
        </div>
    </div>
    <!-- content -->
 
      <!-- form for the new goal -->
    <form action="/newObjective" method="" role="form">
     <!-- calendar -->
     <div class="form-group justify-content-center ">
     <label for="begin">Start of Goal?</label>
     <input type="date" name="begin" placeholder="dd-mm-yyyy" value="" min="1997-01-01" max="2030-12-31">
     </div>
     <div class="form-group">
     <label for="begin">end of Goal?</label>
     <input type="date" name="end" placeholder="dd-mm-yyyy" value="" min="1997-01-01" max="2030-12-31">
     </div>
     <div class="form-group">
      <p class="text-info">OR</p>
     </div>
       <!--selectable option for frequency of goal-->
      <div class="form-group">
      <p class="text-dark">Select from preset? </p>
      <div class="btn-group goal-display-option">
        <input type="radio" class="btn-check" name="repetition_option" id="dayOption" autocomplete="off"/> 
            <label class="btn btn-secondary" for="dayOption">Day</label>
        <input type="radio" class="btn-check" name="repetition_option" id="weekOption" autocomplete="off" />
            <label class="btn btn-secondary" for="weekOption">Week</label>
        <input type="radio" class="btn-check" name="repetition_option" id="monthOption" autocomplete="off" />
        <label class="btn btn-secondary" for="monthOption">Month</label>
       </div>
      </div>
      <div class="form-group">
       <p class="text-dark">Goal type? </p>
     <!--selectable option for Type of goal-->
     <div class="btn-group goal-display-option">
        <input type="radio" class="btn-check" name="type_option" id="sleepOption" autocomplete="off" checked /> 
            <label class="btn btn-secondary" for="sleepOption">Wellbeing</label>
        <input type="radio" class="btn-check" name="type_option" id="healthOption" autocomplete="off" />
            <label class="btn btn-secondary" for="healthOption">Health</label>
        <input type="radio" class="btn-check" name="type_option" id="fitnessOption" autocomplete="off" />
        <label class="btn btn-secondary" for="fitnessOption">Fitness</label>
    </div>
      </div>
      <input type="submit" class="btn btn-submit" value="create" disabled>
    </form>
    
   
  
   
