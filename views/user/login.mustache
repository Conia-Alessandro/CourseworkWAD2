    <body>   
    <!-- content -->
    <div class="d-flex flex-row card border-0 mx-auto justify-content-between align-items-center" style="width:80%;"> 
        <div class="p2 card-body border-0 hide_on_small">
            <img class="img-fluid rounded resize_on_small" src="images/relaxed_outside.jpg" style="max-height:80vh;height:auto;width:auto"alt="an image of a young person registering">
        </div>
        <div class="card border-0 mx-auto" style="max-width: 500px;">
    <div class="card-body">
    <h2 class="card-title text-center mb-4">Login</h2>
    <form method="post" action="/login" class="border-0">
      <div class="form-group">
        {{user_name_error}}
        <label for="username">User Name</label>
        <input type="text" class="form-control" id="username" name="username" placeholder="" required>
      </div>
      <div class="form-group">
        <p class="text-danger">{{password_error}}</p>
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="" minlength="8" required>
        <p class="card-text">Forgot your password? <a href="/reset_ppsw">Click here</a> to reset it.</p>
      </div>
      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" value="" id="remember_check">
        <label class="form-check-label" for="remember_check">Remember me</label>
      </div>
      <div class="mx-auto">
        <input type="submit" id="login_btn" value="Login" class="btn btn-primary btn-block">
      </div>
    </form>
  </div>
</div>
</div>
</body>
</html>