    <body>   
    <!-- content -->
    <div class="d-flex flex-row card border-0 mx-auto justify-content-between" style="width:80%;"> 
        <div class="p2 card-body border-0">
             <!-- image of young person registering goes here-->
            <img class="img-fluid rounded" src="images/relaxed_outside.jpg" style="max-height:80vh;height:auto;width:auto"alt="an image of a young person registering">
        </div>
        <div class="card-body border-0 me-auto my-auto">
            
            <h2 class="card-title"style="width:75%;">Login</h2>  
            <br>
            <form method="post" role="/register" class="border-0">
            <div class="form-group w-50">
                {{user_name_error}}
                <label for="username">User Name</label>
                <input type="text" class="form-control" id="username" name="username" placeholder=""  required>
                <br>
            </div>
            <div class="form-group w-50">
                {{password_error}}
                <label for="password">Password</label>
                <input type="password" class="form-control" id="psw" name="psw" placeholder="" minlength="8"  required>
                <br>
                <p class="card-text">forgot your password? click <a href="/reset_ppsw">here</a> to reset it</p>
            </div>
            <div class="form-check w-50">
                <input class="form-check-input" type="checkbox" value="" id="remember_check">
                <label class="form-check-label" for="remember_check">Remember me</label>
                <br>
            </div>
            <div class="form-group">
            <div class="mx-auto">
                <br>
                <input type="submit" id="login_btn" value="Login" class="btn btn-primary btn-lg">
            </div>
                
            </div>
            </form>
        </div>
    </div>
           
    </body>
</html>